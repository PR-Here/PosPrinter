    private void partnerList() {
        loaderShow(getActivity());
        String urlApi = null;
        if (currentLang != null) {
            urlApi = ETE_BASE_URL + ETE_GET_ALL_PARTNER + "?" + "language=" + currentLang + "?is_navigate=0";
        } else {
            urlApi = ETE_BASE_URL + ETE_GET_ALL_PARTNER + "?is_navigate=0";
        }
        StringRequest request = new StringRequest(Request.Method.GET, urlApi,
                new Response.Listener<String>() {
                    @Override
                    public void onResponse(String response) {
                        try {
                            partnerListModels.clear();
                            JSONObject jsonObject = new JSONObject(response);

                            int status = jsonObject.getInt("status");
                            String msg = jsonObject.getString("msg");

                            if (status == 1) {

                                JSONArray array = jsonObject.getJSONArray("data");
                                for (int i = 0; i < array.length(); i++) {
                                    JSONObject jsonObject1 = array.getJSONObject(i);

                                    PartnerListModel partnerListModel = gson.fromJson(String.valueOf(jsonObject1), PartnerListModel.class);
                                    partnerListModels.add(partnerListModel);
                                }

                                partnerListAdapter = new PartnerListAdapter(getContext(), partnerListModels, new PartnerListAdapter.OnActiveItem() {
                                    @Override
                                    public void activeInactiveMethod(PartnerListModel pratnerListModel) {
                                        status1 = pratnerListModel.getStatus();
                                        if (status1 == 1) {
                                            partnerStatus = 0;
                                            dialogboxs();

                                        } else {
                                            partnerStatus = 1;
                                            getDate();
                                        }
                                        PartnerID = String.valueOf(pratnerListModel.getId());
                                        System.out.println(status1 + "......adpter status check partnerStatus..........");


                                    }
                                });
                                partnerListRv.setAdapter(partnerListAdapter);

                            } else {
                                Toast.makeText(getContext(), msg, Toast.LENGTH_SHORT).show();
                            }
                        } catch (JSONException e) {
                            e.printStackTrace();
                        }

                        loaderHide(getActivity());
                        pulltoRefresh.setRefreshing(false);
                    }
                }, new Response.ErrorListener() {
            @Override
            public void onErrorResponse(VolleyError error) {
                if (error instanceof TimeoutError || error instanceof NoConnectionError) {
                    Toast.makeText(getContext(), "Connection failed", Toast.LENGTH_SHORT).show();
                }
                loaderHide(getActivity());
                pulltoRefresh.setRefreshing(false);
            }
        }) {
            @Override
            public Map<String, String> getHeaders() throws AuthFailureError {
                Map<String, String> map = new HashMap<String, String>();
                map.put("Authorization", "Bearer " + loginToken);
                return map;
            }
        };

        final RequestQueue requestQueue = Volley.newRequestQueue(getContext());
        requestQueue.add(request);

        requestQueue.addRequestFinishedListener(new RequestQueue.RequestFinishedListener<Object>() {
            @Override
            public void onRequestFinished(Request<Object> request) {
                requestQueue.getCache().clear();
            }
        });
    }


    private void changeStatus(final String date) {
        loaderShow(getActivity());
        String changeStatus = ETE_BASE_URL + ETE_PARTNER_ACTIVE_STATUS;
        System.out.println(changeStatus + ".................change");
        StringRequest stringRequest = new StringRequest(Request.Method.POST, changeStatus,
                new Response.Listener<String>() {
                    @Override
                    public void onResponse(String response) {
                        try {
                            JSONObject jsonResponse = new JSONObject(response);
                            int status = jsonResponse.getInt(ETE_STATUS);
                            String msg = jsonResponse.getString(ETE_MSG);

                            if (status == 1) {
                                partnerList();
                                Toast.makeText(getContext(), msg, Toast.LENGTH_SHORT).show();


                            } else {
                                Toast.makeText(getContext(), msg, Toast.LENGTH_SHORT).show();

                            }
                        } catch (JSONException e) {
                            e.printStackTrace();
                        }
                        loaderHide(getActivity());
                    }
                },
                new Response.ErrorListener() {
                    @Override
                    public void onErrorResponse(VolleyError error) {
                        if (error instanceof TimeoutError || error instanceof NoConnectionError) {
                            Toast.makeText(getContext(), "Internet Connection Failed", Toast.LENGTH_SHORT).show();
                        }
                        loaderHide(getActivity());
                    }
                }) {
            @Override
            public Map<String, String> getHeaders() throws AuthFailureError {
                Map<String, String> header = new HashMap<String, String>();
                header.put("Authorization", "Bearer " + loginToken);

                System.out.println(header + "...............header");
                return header;
            }


            @Override
            protected Map<String, String> getParams() throws AuthFailureError {
                Map<String, String> param = new HashMap<String, String>();

                param.put("partner_id", PartnerID);
                param.put("status", String.valueOf(partnerStatus));
                if (date != null) {
                    param.put("end_date", date);
                }
                System.out.println(param + "...........params");

                return param;
            }
        };

        stringRequest.setRetryPolicy(new DefaultRetryPolicy(MY_SOCKET_TIMEOUT,
                DefaultRetryPolicy.DEFAULT_MAX_RETRIES,
                DefaultRetryPolicy.DEFAULT_BACKOFF_MULT));

        final RequestQueue requestQueue = Volley.newRequestQueue(getContext());
        requestQueue.add(stringRequest);

        requestQueue.addRequestFinishedListener(new RequestQueue.RequestFinishedListener<Object>() {
            @Override
            public void onRequestFinished(Request<Object> request) {
                requestQueue.getCache().clear();
            }
        });
    }

    private void getDate() {


        final Calendar cldr = Calendar.getInstance();
        int day = cldr.get(Calendar.DAY_OF_MONTH);
        int month = cldr.get(Calendar.MONTH);
        int year = cldr.get(Calendar.YEAR);
        // date picker dialog
        datepicker = new DatePickerDialog(getActivity(),
                new DatePickerDialog.OnDateSetListener() {
                    @Override
                    public void onDateSet(DatePicker view, int year, int monthOfYear, int dayOfMonth) {

                        myear = year;
                        mMonthofyear = monthOfYear;
                        mdayofmonth = dayOfMonth;


                        String date = year + "-" + (monthOfYear + 1) + "-" + dayOfMonth;

                        changeStatus(date);
                    }
                }, year, month, day);
        datepicker.show();
        // datepicker.updateDate(myear,mMonthofyear,mdayofmonth);
    }


    private void dialogboxs() {
        builder = new AlertDialog.Builder(Objects.requireNonNull(getContext()));
